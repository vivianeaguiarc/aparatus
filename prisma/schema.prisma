generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Barbershop {
  id          String              @id @default(uuid())
  name        String
  address     String
  description String
  imageUrl    String
  phones      String[]
  services    BarbershopService[]
}

model BarbershopService {
  id           String @id @default(uuid())
  name         String
  description  String
  imageUrl     String
  priceInCents Int

  barbershopId String
  barbershop   Barbershop @relation(fields: [barbershopId], references: [id], onDelete: Cascade)
}
